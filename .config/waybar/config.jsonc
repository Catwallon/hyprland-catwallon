{
  "modules-left": [
    "hyprland/workspaces",
    "clock#time",
    "clock#date",
    "battery",
    "tray"
  ],
  "modules-center": ["hyprland/window"],
  "modules-right": [
    "temperature",
    "cpu",
    "memory",
    "wireplumber",
    "bluetooth",
    "network",
    "custom/power"
  ],

  "clock#time": {
    "format": "<span color=\"#7aa2f7\"> </span>{:%H:%M}",
    "interval": 1
  },
  "clock#date": {
    "format": "<span color=\"#7aa2f7\"> </span>{:%d/%m}",
    "interval": 1
  },
  "battery": {
    "bat": "BAT0",
    "states": {
      "warning": 20,
      "critical": 5
    },
    "format": "<span color=\"#7aa2f7\">{icon} </span>{capacity}%",
    "format-warning": "<span color=\"#e06c75\">{icon} </span>{capacity}%",
    "format-critical": "<span color=\"#e06c75\">{icon} </span>{capacity}%",
    "format-charging": "<span color=\"#e5c07b\">󱐌 </span>{capacity}%",
    "format-icons": [" ", " ", " ", " ", " "],
    "interval": 1
  },
  "tray": {
    "spacing": 10,
    "max-length": 30
  },
  "hyprland/window": {
    "max-length": 48
  },
  "temperature": {
    "hwmon-path": "/sys/class/hwmon/hwmon6/temp1_input",
    "critical-threshold": 80,
    "format": "<span color=\"#7aa2f7\"> </span>{temperatureC}°C",
    "format-critical": "<span color=\"#e06c75\"> </span>{temperatureC}°C",
    "interval": 4
  },
  "cpu": {
    "format": "<span color=\"#7aa2f7\"> </span>{usage}%",
    "interval": 4
  },
  "memory": {
    "format": "<span color=\"#7aa2f7\">󰊚 </span>{used}GB",
    "interval": 4
  },
  "wireplumber": {
    "scroll-step": 5,
    "format": "<span color=\"#7aa2f7\">{icon}</span>{volume}%",
    "format-muted": "<span color=\"#f7768e\"> </span>",
    "format-icons": [" ", " ", " "],
    "interval": 1
  },
  "bluetooth": {
    "adapters": ["hci0"],
    "format": "<span color=\"#7aa2f7\"></span>",
    "format-off": "<span color=\"#f7768e\">󰂲</span>",
    "format-disabled": "<span color=\"#f7768e\">󰂲</span>",
    "format-connected": "<span color=\"#7aa2f7\">󰂱</span>",
    "on-click": "blueman-manager",
    "interval": 1
  },
  "network": {
    "format-wifi": "<span color=\"#7aa2f7\"> </span>{signalStrength}%",
    "format-ethernet": "<span color=\"#7aa2f7\"> </span>",
    "format-disconnected": "<span color=\"#f7768e\">󰤮  </span>",
    "on-click": "nmcli device wifi rescan && kitty -e zsh -c nmtui",
    "interval": 1
  },
  "custom/power": {
    "format": "<span color=\"#abb2bf\">⏻ </span>",
    "menu": "on-click",
    "menu-file": "/home/catwallon/.config/waybar/power_menu.xml",
    "menu-actions": {
      "lock": "swaylock",
      "suspend": "systemctl suspend",
      "logout": "loginctl terminate-user $USER",
      "shutdown": "shutdown 0",
      "reboot": "reboot"
    }
  }
}
